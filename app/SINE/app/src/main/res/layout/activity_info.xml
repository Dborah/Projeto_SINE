<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="trabalho.sine.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

        <TextView
            android:text="SINE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titulo"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColorLink="@android:color/background_dark"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Versão: 1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/versao"
            android:textSize="22sp"
            android:textAlignment="viewStart"
            android:textColorLink="@android:color/background_dark" />

        <TextView
            android:text="Desenvolvedores: Alunos do 6º Periodo do curso Superior de Tecnologia em Sistemas para Internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desenvolvedor"
            android:textSize="22sp"
            android:textColorLink="@android:color/background_dark" />

        <TextView
            android:text="Prof.: Rafael Alencar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/professor"
            android:textSize="22sp"
            android:textAlignment="viewStart"
            android:textColorLink="@android:color/background_dark" />


    </LinearLayout>



    <fragment
        android:id="@+id/fragment_navigation_drawer_info"
        android:name="trabalho.sine.activity.FragmentDrawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
